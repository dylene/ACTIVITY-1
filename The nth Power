#include <stdio.h>

int main()
{
    int x,y,power=1,i;
    printf("Enter x: ");
    scanf("%d",&x);
    printf("Enter y: ");
    scanf("%d",&y);
    
    if(y>0)
    {
        for(i=0;i<y;i++)
        {
            power*=x;
        }
        printf("%d ^ %d = %d.",x,y,power);
    }
    else if(y<0)
    {
        for(i=0;i<-1*y;i++)
        {
            power*=x;
        }
        printf("%d ^ %d = 1/%d.",x,y,power);
    }
    else
    {
        printf("%d ^ %d = 1",x,y);
    }
    return 0;
}
