#include <stdio.h>

int main()
{
    int number[25],i,total_num=0,average,positive_num=0,sum=0;
    
    for(i=0;i<25;i++)
    {
        do
        {
            printf("[%d] Input number: ",i+1);
            scanf("%d",&number[i]);
        }while(number[i]<0);
        if(number[i]==0)
        {
            break;
        }
        total_num++;
    }
    for(i=0;i<total_num;i++)
    {
        sum+=number[i];
        positive_num++;
    }
    average=sum/positive_num;
    printf("\nAverage = %d.",average);
    
    return 0;
}
