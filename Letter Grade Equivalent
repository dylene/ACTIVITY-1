#include <stdio.h>

int main()
{
    int grade;
    printf("Grade Eqivalent.");
    do
    {
        printf("\nInput Grade: ");
        scanf("%d",&grade);
        if(grade>=90&&grade<=99)
        {
            printf("Your Grade Equivalent is A+");
        }
        else if(grade>=80&&grade<=89)
        {
            printf("Your Grade Equivalent is A");
        }
        else if(grade>=70&&grade<=79)
        {
            printf("Your Grade Equivalent is B");
        }
        else if(grade>=60&&grade<=69)
        {
            printf("Your Grade Equivalent is C");
        }
        else if(grade>=50&&grade<=59)
        {
            printf("Your Grade Equivalent is D");
        }
        else if(grade>=1&&grade<50)
        {
            printf("Your Grade Equivalent is F");
        }
        else
        {
            printf("\"Invalid Input\"");
        }
    }while(grade>99||grade<1);

    return 0;
}
